<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

        <LinearLayout
                android:layout_width="270dp"
                android:layout_height="380dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:background="@drawable/version_update"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="233dp"
                    android:text="界面全新改版，增加更多功能"
                    android:textSize="@dimen/dimen_size_14"
                    android:textColor="@color/page_gray"/>

            <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="130dp"
                    android:layout_height="@dimen/dimen_distance_35"
                    android:layout_marginTop="68dp"
                    android:text="立即更新"
                    android:textSize="@dimen/dimen_size_16"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/version_update_shape"/>

        </LinearLayout>

    </LinearLayout>
</layout>

