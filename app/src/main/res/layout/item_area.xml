<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable name="areaModel" type="cn.com.cretech.bean.SchoolPublishedBean.AreaData"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_distance_15"
                android:text="@{areaModel.p_name}"
                android:textSize="@dimen/dimen_size_13"
                android:textColor="@color/nav_title"/>
        <cn.com.cretech.widget.NestedGridView
                android:id="@+id/grid_nav_list"
                android:layout_width="match_parent"
                android:verticalSpacing="@dimen/dimen_distance_11"
                android:horizontalSpacing="@dimen/dimen_distance_11"
                android:layout_marginLeft="@dimen/dimen_distance_10"
                android:layout_marginRight="@dimen/dimen_distance_10"
                android:layout_marginTop="@dimen/dimen_distance_15"
                android:numColumns="3"
                android:divider="@android:color/transparent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>